<% layout("/layouts/boilerplate.ejs") -%>

    <body><br>

        <div class="row">
            <div class="col-8 offset-2">
                <h1>ADD List</h1><br>
                <form method="post" action="/listings/addList" class="needs-validation" novalidate>
                    <div class="form-group mb-3">
                        <label for="title">Title: </label>
                        <input placeholder="Enter Title" class="form-control" type="text" name="list[title]" id="title"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="description">Description: </label>
                        <textarea required placeholder="Enter Description" class="form-control" name="list[description]"
                            id="description"></textarea>
                        <div class="invalid-feedback">
                            Please provide us a crispy description.
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="imgUrl">Image Link</label>
                        <input class="form-control" placeholder="Enter image url/link" type="url"
                            name="list[image][url]" id="imgUrl">
                    </div>
                    <div class="row">
                        <div class="form-group mb-3 col-md-4">
                            <label for="price">Price: </label>
                            <input required placeholder="Enter Price" class="form-control" step="0.01" type="number"
                                name="list[price]" id="price">
                            <div class="invalid-feedback">Please mention price.</div>
                        </div>

                        <div class="form-group mb-3 col-md-8">
                            <label for="country">Country: </label>
                            <input required placeholder="Enter Country" class="form-control" type="text"
                                name="list[country]" id="country">
                            <div class="invalid-feedback">Please select Country.</div>
                        </div>
                    </div>
                    <br>
                    <div class="form-group mb-3">
                        <label for="location">Location:</label>
                        <input required placeholder="Enter Location" class="form-control" type="text"
                            name="list[location]" id="location">
                        <div class="invalid-feedback">
                            Please mention Location.
                        </div>
                    </div><br>
                    <button class="btn btn-dark mb-3">Submit</button>
                </form>
            </div>
        </div>

    </body>