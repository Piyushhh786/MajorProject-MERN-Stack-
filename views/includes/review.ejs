<div class="review mb-3">
    <h4>Leave a Review</h4>
    <form method="post" novalidate class="needs-validation" action="/listings/<%=list._id %>/review">
        <div class="rating col-8">
            <label class="form-label" for="rating ">Rating:</label><br>
            <input class="form-control" required type="range" name="review[rating]" id="rating" min="1" max="5"
                step="1">
        </div><br>
        <div class="comment">
            <label class="form-label" for="comment">Comment:</label><br>
            <textarea required class="form-control" name="review[comment]" cols="30" rows="5" id="comment"
                placeholder="Write your comment here."></textarea>
            <div class="invalid-feedback">Please write a comment.</div>
        </div>
        <br>
        <button class="btn">Done</button>
    </form>
</div>
<hr><br>
<div class="reviewList">
    <h4>
        <%= list.reviews.length>0?"All Reviews":"No Reviews" %>
    </h4>
    <div class="all-reviews row">
        <% for(let review of list.reviews) { %>
            <div class="card col-4 " style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Piyush</h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <%= review.rating %> star
                    </h6>
                    <p class="card-text">
                        <%= review.comment %>
                    </p>


                    <form onsubmit="return confirmDelete(event)" method="post"
                        action="/listings/<%= list._id %>/review/<%= review._id%>?_method=DELETE">
                        <button class="review-btn">Delete</button>
                    </form>

                </div>
            </div>
            <% } %>
    </div>
</div>